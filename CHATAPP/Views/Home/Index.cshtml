@{
    ViewData["Title"] = "Users List";
}
@model List<CHATAPP.Models.Users>

@if (Model != null && Model.Count > 0)
{
    <table class="table" style="padding-top:20px">
        <thead style="color:white;background-color:gray">
            <tr>
                <th>Name</th>
                <th>UserName</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Username</td>
                    <td>
                        <!-- Start Chat Button -->
                        <a href="@Url.Action("Index", "Chat", new {  receiverUsername = item.Username })"
                           class="btn btn-primary" style="background-color: #007bff; border: none; color: white; padding: 8px 16px; text-align: center; text-decoration: none; font-size: 16px; border-radius: 5px; cursor: pointer;">
                            Start Chat
                        </a>
                        @* <button type="submit" class="btn btn-primary">Start Chat</button> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Users found.</p>
}

